@model MyInventory.Models.Capsules.CapsuleViewModel
@{
  ViewBag.Title = "Delete Capsule: " + Model.Code;
}

<h2>@ViewBag.Title</h2>
@Html.Partial("_CapsuleHeader", Model)

@using (Html.BeginForm("Delete", "Capsules", FormMethod.Post, new { @class = "form-horizontal" })) {
  <fieldset>
    <div class="form-group">
      <div class="col-lg-12">
        @Html.HiddenFor(model => model.CapsuleId)
        <input type="submit" value="Confirm" class="btn btn-primary" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
      </div>
    </div>
  </fieldset>
}
