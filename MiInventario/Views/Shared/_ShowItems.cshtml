@model IEnumerable<MiInventario.Models.ItemInventoryViewModel>
@if (Model.Any(p => p.Cantidad > 0 || p.CantidadCapsulas > 0))
{
    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
        <table class="table table-condensed table-striped">
            <colgroup>
                <col class="col-lg-6 col-md-6 col-sm-6 col-xs-6" />
                <col class="col-lg-2 col-md-2 col-sm-2 col-xs-2" />
                <col class="col-lg-2 col-md-2 col-sm-2 col-xs-2" />
                <col class="col-lg-2 col-md-2 col-sm-2 col-xs-2" />
            </colgroup>
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Qty</th>
                    <th>Caps</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (MiInventario.Models.ItemInventoryViewModel item in Model.Where(p => p.Cantidad > 0 || p.CantidadCapsulas > 0))
                {
                    <tr>
                        <td class="nombre">
                            @Html.Partial("_ItemDescription", item)
                        </td>
                        <td class="cantidadItem">
                            @if (item.Cantidad > 0)
                            {
                                @item.Cantidad;
                            }
                        </td>
                        <td class="cantidadCapsula">
                            @if (item.CantidadCapsulas > 0)
                            {
                                @String.Format("({0})", item.CantidadCapsulas)
                            }
                        </td>
                        @{
                    int total = item.CantidadCapsulas + item.Cantidad;
                    <td class="cantidadTotal">
                        @total
                    </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}