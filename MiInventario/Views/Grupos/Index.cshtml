@model IEnumerable<MiInventario.Models.GrupoViewModel>
@{
  ViewBag.Title = "Inventario";
}

<h2>Inventory</h2>
@if (Model.Sum(p => p.Total + p.TotalCapsulas) > 2000)
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert">×</button>
        La cantidad total de items supera lo permitido (2000).
    </div>
}
<div class="col-lg-5 col-md-6 col-sm-7 col-xs-12">
  <table class="table table-condensed table-striped">
    <colgroup>
      <col class="col-lg-6 col-md-6 col-sm-6 col-xs-6" />
      <col class="col-lg-2 col-md-2 col-sm-2 col-xs-2" />
      <col class="col-lg-2 col-md-2 col-sm-2 col-xs-2" />
      <col class="col-lg-2 col-md-2 col-sm-2 col-xs-2" />
    </colgroup>
    <thead>
      <tr>
        <th>Item</th>
        <th>Total</th>
        <th>Caps</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      @foreach (var grupo in Model) {
        <tr>
          <td>@Html.ActionLink(Resources.Groups.ResourceManager.GetString(grupo.GroupID), "List", new { @id = grupo.GroupID})</td>
          <td class="cantidadItem">
            @grupo.Total
          </td>
          <td class="cantidadCapsula">
            (@grupo.TotalCapsulas)
          </td>
            <td class="text-center">@Html.ActionLink("Edit", "Edit", new { @id = grupo.GroupID })</td>
        </tr>
      }
      <tr>
        <td>@Html.ActionLink(Resources.Groups.G_ALL, "ViewAll")</td>
        <td class="cantidadItem">
          @Model.Sum(p => p.Total + p.TotalCapsulas)
        </td>
        <td class="cantidadCapsula">
          (@Model.Sum(p => p.TotalCapsulas))
        </td>
        <td></td>
      </tr>
    </tbody>
  </table>
</div>
<div class="clearfix"></div>