@model IEnumerable<MiInventario.Models.Inventory.ItemDifferenceViewModel>
@if (Model.Any(p => p.OriginDifference > 0 || p.DestinationDifference > 0))
{
    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
        <table class="table table-condensed table-striped">
            <colgroup>
                <col class="col-lg-4 col-md-4 col-sm-4 col-xs-4" />
                <col class="col-lg-2 col-md-2 col-sm-2 col-xs-2" />
                <col class="col-lg-2 col-md-2 col-sm-2 col-xs-2" />
                <col class="col-lg-2 col-md-2 col-sm-2 col-xs-2" />
                <col class="col-lg-2 col-md-2 col-sm-2 col-xs-2" />
            </colgroup>
            <thead>
                <tr class="small">
                    <th>Item</th>
                    <th>Me</th>
                    <th>Other</th>
                    <th>D Me</th>
                    <th>D Other</th>
                </tr>
            </thead>
            <tbody>
                @foreach (MiInventario.Models.Inventory.ItemDifferenceViewModel item in Model.Where(p => p.OriginDifference > 0 || p.DestinationDifference > 0))
                {
                    <tr>
                        <td class="name">
                            @Html.Partial("_ItemDescription", item)
                        </td>
                        <td class="itemQuantity">
                            @item.OriginQuantity
                        </td>
                        <td class="itemQuantity">
                            @item.DestinationQuantity
                        </td>
                        <td class="itemQuantity">
                            @if (item.OriginDifference > 0)
                            {
                                <text>@item.OriginDifference</text>
                            }
                        </td>
                        <td class="itemQuantity">
                            @if (item.DestinationDifference > 0)
                            {
                                <text>@item.DestinationDifference</text>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}